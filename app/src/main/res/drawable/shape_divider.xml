<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_disabled_color" />
            <corners android:radius="@dimen/radius_circle_shape" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_enabled_color" />
            <corners android:radius="@dimen/radius_circle_shape" />
            <stroke android:width="@dimen/button_enabled_stroke" android:color="@color/button_enabled_stroke_color" />
        </shape>
    </item>
</selector>