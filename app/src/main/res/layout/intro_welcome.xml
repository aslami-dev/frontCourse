<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/undraw_online_shopping_ga73"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="@string/intro_welcome_title"
        android:textColor="@color/title_txtColor"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/imgHeader" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/opensans_semibold"
        android:lineSpacingExtra="8dp"
        android:text="@string/intro_welcome_body"
        android:textAlignment="center"
        android:textColor="@color/body_txtColor"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <LinearLayout
        android:id="@+id/viewDividers"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="20"
        app:layout_constraintTop_toBottomOf="@id/tvBody">


        <TextView
            style="@style/divider_style"
            android:layout_margin="@dimen/medium"
            android:layout_weight="2"
            android:enabled="true" />

        <TextView
            style="@style/divider_style"
            android:layout_margin="@dimen/medium"
            android:enabled="false" />

        <TextView
            style="@style/divider_style"
            android:layout_margin="@dimen/medium"
            android:enabled="false" />
    </LinearLayout>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_footer"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>