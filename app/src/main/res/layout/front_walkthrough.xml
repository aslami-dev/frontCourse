<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <ImageView
        android:id="@+id/img_walking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/walking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <LinearLayout
        android:layout_marginTop="18dp"
        android:id="@+id/text_BottomImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/img_walking"
        app:layout_constraintStart_toStartOf="@id/img_walking"
        app:layout_constraintTop_toBottomOf="@id/img_walking">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_heavydemo"
            android:paddingBottom="28dp"
            android:text="Welcome!"
            android:textAllCaps="false"
            android:textColor="#23203F"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_extralightdemo"
            android:gravity="center"
            android:lineSpacingExtra="16dp"
            android:text="Now were up in the big leagues gettingour turn at bat.The Brady Bunch that's the way we  Brady Bunch.."
            android:textAllCaps="false"
            android:textColor="#716F87"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center|bottom"
            android:weightSum="20">

            <view
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/background_homelittle"
                android:backgroundTint="#6A90F2" />

            <view
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/background_homelittle"
                android:backgroundTint="#DDDDDD" />

            <view
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@drawable/background_homelittle"
                android:backgroundTint="#DDDDDD" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_homelittle"
            android:backgroundTint="#000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>