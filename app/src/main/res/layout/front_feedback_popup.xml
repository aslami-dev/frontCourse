<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/tv_Header"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_height="wrap_content"
        android:text="@string/text_Header"
        android:textSize="26sp"
        android:textColor="#424242"
        android:gravity="center"
        android:padding="18dp"
        android:lineSpacingExtra="10dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/Layout_Stars"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="15"
        android:gravity="center">
       <ImageButton
android:layout_marginEnd="18dp"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:src="@drawable/stars_momma"
           android:background="0"/>
        <ImageButton
            android:layout_marginEnd="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/stars_momma"
            android:background="0"/>
        <ImageButton
            android:layout_marginEnd="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/stars_momma"
            android:background="0"/>
        <ImageButton
            android:layout_marginEnd="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/stars_momma"
            android:background="0"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/stars_momma"
            android:background="0"/>
    </LinearLayout>
    <Button
        android:id="@+id/Bottom_Submit"
        app:layout_constraintTop_toBottomOf="@id/Layout_Stars"
        android:layout_width="match_parent"
        android:layout_margin="34dp"
        android:text="Submit"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:padding="18dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:backgroundTint="#6A90F2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not now!May be later"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/Bottom_Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26sp"/>
    <LinearLayout
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_homelittle"
            android:backgroundTint="#000" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>