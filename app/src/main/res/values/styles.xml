<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="buttons_style">
       <item name="android:background">@drawable/shape_button</item>
       <item name="android:textColor">@color/button_txtColor</item>
       <item name="android:textSize">@dimen/button_textSize</item>
       <item name="fontFamily">@font/opensans_semibold</item>
       <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>


    <style name="divider_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/height_divider_large</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_divider</item>
    </style>





</resources>
